name: "Prevent DNS Leak"
desc: "Adds a rule to prevent DNS leaks and enables fake-ip mode."

rule-providers:
  prevent_dns_leak:
    type: "http"
    interval: 86400
    behavior: "domain"
    format: "text"
    url: "https://raw.githubusercontent.com/xishang0128/rules/main/clash%20or%20stash/prevent_dns_leak/prevent_dns_leak_domain.list"

rules:
  - RULE-SET,prevent_dns_leak,DIRECT

dns:
  enhanced-mode: "fake-ip"